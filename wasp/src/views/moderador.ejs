<%- include('partials/header') %>

<h1 class="display-6 text-center">Pàgina del Moderador</h1>
<p class="lead text-center">Edició, creació i control de l'aplicació.</p>
<hr>

<div class="mb-4 mt-4 card">
  <div class="card-body">
    <h2 class="mb-4">Incidències no assignades</h2>
    <%- include('incidencias/asignar', { incidencias: incidenciasNoTecnic } ) %>
  </div>
</div>

<div class="mb-4 mt-4 card">
  <div class="card-body">
    <h2 id="titulo-incidencias" class="mb-4">Veure incidències assignades</h2>

    <div class="btn-group mb-3" role="group" aria-label="Selector de incidencias">
      <button type="button" class="btn btn-outline-primary active" id="btn-tots">
      <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-person" viewBox="0 0 16 16">
        <path d="M8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6m2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0m4 8c0 1-1 1-1 1H3s-1 0-1-1 1-4 6-4 6 3 6 4m-1-.004c-.001-.246-.154-.986-.832-1.664C11.516 10.68 10.289 10 8 10s-3.516.68-4.168 1.332c-.678.678-.83 1.418-.832 1.664z"/>
      </svg>
        Assignades
      </button>
      <button type="button" class="btn btn-outline-success" id="btn-meves">
      <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-check-circle" viewBox="0 0 16 16">
        <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14m0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16"/>
        <path d="m10.97 4.97-.02.022-3.473 4.425-2.093-2.094a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-1.071-1.05"/>
      </svg>
        Completades
      </button>
    </div>
    
    <div id="contenedor-incidencias">
      <div id="incidencias-assignades">
        <%- include('incidencias/list_all', { incidencias: incidenciasYesTecnic }) %>
      </div>
      <div id="incidencias-completades" style="display:none;">
        <%- include('incidencias/list_all', { incidencias: incidenciasComplete }) %>
      </div>
    </div>
  </div>
</div>

<div class="mb-4 mt-4">
  <h2 class="mb-4">Gestió de les dades</h2>

  <div class="row">
  <div class="col-md-4 mb-4">
    <div class="card h-100 shadow-sm">
      <div class="card-header d-flex justify-content-between align-items-center">
        <span>Departaments</span>
        <a href="/otros/departamentos/new" class="btn btn-primary">Afegir</a>
      </div>
      <div class="card-body overflow-auto" style="max-height: 500px;">
        <%- include('otros/departamentos/list_all', { departamentos: departamentos }) %>
      </div>
    </div>
  </div>

    <div class="col-md-4 mb-4">
    <div class="card h-100 shadow-sm">
      <div class="card-header d-flex justify-content-between align-items-center">
        <span>Tècnics</span>
        <a href="/otros/tecnicos/new" class="btn btn-primary">Afegir</a>
      </div>
      <div class="card-body overflow-auto" style="max-height: 500px;">
        <%- include('otros/tecnicos/list_all', { departamentos: departamentos }) %>
      </div>
    </div>
  </div>

  <div class="col-md-4 mb-4">
    <div class="card h-100 shadow-sm">
      <div class="card-header d-flex justify-content-between align-items-center">
        <span>Categories</span>
        <a href="/otros/categorias/new" class="btn btn-primary">Afegir</a>
      </div>
      <div class="card-body overflow-auto" style="max-height: 500px;">
        <%- include('otros/categorias/list_all', { categorias: categorias }) %>
      </div>
    </div>
  </div>
</div>

<div class="mb-4 mt-4 card">
  <div class="card-body">
    <h2 class="mb-4">Estadistiqués de l'aplicació</h2>
    <%- include('grafics') %>
  </div>
</div>

<%- include('partials/footer') %>