<%- include('../../partials/header') %>

    <h1>Editar Categoría</h1>
    <form action="/otros/categorias/<%= categoria.id %>/update" method="POST">
        <div class="mb-3">
            <label for="nombre" class="form-label">Nom</label>
            <input type="text" name="nombre" value="<%= categoria.nombre %>" class="form-control" required />
        </div>

        <div class="d-flex justify-content-between">
            <a href="/moderador" class="btn btn-secondary">Volver atrás</a>
            <button type="submit" class="btn btn-primary">Actualizar</button>
        </div>
    </form>

<%- include('../../partials/footer') %>