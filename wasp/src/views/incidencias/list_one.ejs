<%- include('../partials/header', { title: 'Mostrar Incidencia' }) %>

<table class="table">
    <tr>
        <th>ID</th>
        <th>Descripción</th>
        <th>Prioridad</th>
        <th>Departamento</th>
        <th>Fecha de Incidencia</th>
        <th>Acciones</th>
    </tr>
    <tr>
        <td>
            <%= incidencia.id %>
        </td>
        <td>
            <%= incidencia.descripcio %>
        </td>
        <td>
            <%= incidencia.prioritat ? incidencia.prioritat : 'Sense prioritat'%>
        </td>
        <td>
            <%= incidencia.Departamento ?  incidencia.Departamento.nombre : 'Sin departamento' %>
        </td>
        <td>
            <%= incidencia.dataincidencia %>
        </td>
        <td>
            <!-- Botón para ver actuaciones -->
            <a href="/actuaciones/list/<%= incidencia.id %>" class="btn btn-info btn-sm">Ver Actuaciones</a>
        </td>
    </tr>
</table>

<%- include('../partials/footer') %>