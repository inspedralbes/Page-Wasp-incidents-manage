<%- include('../partials/header', { title: 'Asignar Incidencia' }) %>
  <h1>Asignar Incidencia</h1>
  
  <table class="table">
    <tr>
        <th>ID</th>
        <th>Descripción</th>
        <th>Prioridad</th>
        <th>Departamento</th>
        <th>Fecha de Incidencia</th>
        <th>Tecnic</th>
    </tr>
    <% incidencias.forEach(inc => { %>
        <tr>
            <td><%= inc.id %></td>
            <td><%= inc.descripcio %></td>
            <td><%= inc.prioritat %></td>
            <td><%= inc.departament %></td>
            <td><%= inc.dataincidencia %></td> 
            <td>
              <select name="tecnico" class="form-select">
                <option value="" disabled <%= !inc.tecnicoId ? 'selected' : '' %>>Selecciona un técnico</option>
                <% tecnicos.forEach(tec => { %>
                  <option value="<%= tec.id %>"><%= tec.nombre %></option>
                <% }) %>
              </select>
            </td>
        </tr>
    <% }); %>
</table>

<%- include('../partials/footer') %>