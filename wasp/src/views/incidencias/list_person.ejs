<table class="table">
    <tr>
        <th>ID</th>
        <th>Descripción</th>
        <th>Prioridad</th>
        <th>Departamento</th>
        <th>Categoria</th>
        <th>Fecha de Incidencia</th>
        <th>Actuaciones</th>
    </tr>
    <% if (incidencias && incidencias.length> 0) { %>
        <% incidencias.forEach(incidencia=> { %>
            <tr>
                <td>
                    <%= incidencia.id %>
                </td>
                <td>
                    <%= incidencia.descripcio %>
                </td>
                <td>
                    <%= incidencia.prioritat %>
                </td>
                <td>
                    <%= incidencia.Departamento ? incidencia.Departamento.nombre : 'Sense departamento' %>
                </td>
                <td>
                    <%= incidencia.Categoria.nombre %>
                </td>
                <td>
                    <%= incidencia.dataincidencia %>
                </td>
                <td>
                    <a href=""></a>
                </td>
            </tr>
        <% }) %>
    <% } else { %>
        <tr>
            <td colspan="4">No hi ha incidències assignades.</td>
        </tr>
    <% } %>
</table>