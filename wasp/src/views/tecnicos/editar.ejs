<%- include('../partials/header') %>

    <h1>Editar Técnic</h1>
    <form action="/otros/tecnicos/<%= tecnico.id %>/update" method="POST">
        <div class="mb-3">
            <label for="nombre" class="form-label">Nom</label>
            <input type="text" name="nombre" value="<%= tecnico.nombre %>" class="form-control" required />
        </div>

        <div class="mb-3">
            <label for="contrasena" class="form-label">Contrasenya</label>
            <input type="text" name="contrasena" value="<%= tecnico.contrasena %>" class="form-control" required />
        </div>

        <div class="d-flex justify-content-between">
            <a href="/moderador" class="btn btn-secondary">Volver atrás</a>
            <button type="submit" class="btn btn-primary">Actualizar</button>
        </div>
    </form>

    <%- include('../partials/footer') %>