<%- include('../partials/header', { title: 'Actuacions de la incidència' }) %>

<h2 class="mb-4">Actuacions per a la incidència <%= incidencia.id %></h2>

<% if (actuaciones.length === 0) { %>
    <div class="alert alert-warning">Encara no hi ha actuacions per aquesta incidència.</div>
<% } else { %>
    <div class="table-responsive">
        <table class="table table-striped align-middle">
            <thead class="table-dark">
                <tr>
                    <th>Descripció</th>
                    <th>Data</th>
                    <th>Hores</th>
                    <th>Visibilitat</th>
                    <th>Resolt?</th>
                </tr>
            </thead>
            <% actuaciones.forEach(actuacion => { %>
              <tr>
                <td><%= actuacion.descripcio %></td>
                <td><%= moment(actuacion.dataactuacio).format('DD/MM/YYYY') %></td>
                <td><%= actuacion.hores %>h</td>
                <td><%= actuacion.visibilitat ? 'Publica' : 'Privada' %></td>
                <td><%= actuacion.resolt ? 'Resolt' : 'No resolt' %></td>
              </tr>
            <% }) %>
        </table>
    </div>
<% } %>

<div class="d-grid gap-2 mt-3">
    <a href="/actuaciones/new/incidencias/<%= incidencia.id %>" class="btn btn-success">Crear nova actuació</a>
</div>

<%- include('../partials/footer') %>
