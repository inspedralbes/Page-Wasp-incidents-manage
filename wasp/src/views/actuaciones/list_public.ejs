<%- include('../partials/header', { title: 'Actuacions de la incidència' }) %>

<h2 class="mb-4">Actuacions per a la incidència #<%=  %></h2>

<% if (actuaciones.length === 0) { %>
    <div class="alert alert-warning">Encara no hi ha actuacions per aquesta incidència.</div>
<% } else { %>
    <div class="table-responsive">
        <table class="table table-striped align-middle">
            <thead class="table-dark">
                <tr>
                    <th>Descripció</th>
                    <th>Hores</th>
                    <th>Resolt?</th>
                </tr>
            </thead>
            <% actuaciones.forEach(actuacion => { %>
              <tr>
                <td><%= actuacion.descripcio %></td>
                <td><%= actuacion.hores %>h</td>
                <td><%= actuacion.resolt ? 'Resolt' : 'No resolt' %></td>
              </tr>
            <% }) %>
        </table>
    </div>
<% } %>

<%- include('../partials/footer') %>
