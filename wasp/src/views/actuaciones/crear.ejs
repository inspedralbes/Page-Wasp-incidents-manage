<%- include('../partials/header') %>

<div class="container mt-5">
  <h1 class="mb-4">Crear Nova Actuació</h1>
  
  <form action="/actuaciones/create" method="POST">
    <input type="hidden" name="idi" value="<%= incidencia.id %>">

    <div class="mb-3">
      <label for="descripcio" class="form-label">Descripció de l'actuació</label>
      <textarea class="form-control" name="descripcio" id="descripcio" rows="4" required></textarea>
    </div>

    <div class="mb-3">
      <label for="hores" class="form-label">Hores</label>
      <input type="number" class="form-control" name="hores" id="hores" step="0.1" required>
    </div>

    <div class="mb-3">
      <label class="form-label">Visibilitat</label>
      <div class="form-check">
        <input class="form-check-input" type="radio" name="visibilitat" id="publica" value="true" checked>
        <label class="form-check-label" for="visibilitat">Pública</label>
      </div>
      <div class="form-check">
        <input class="form-check-input" type="radio" name="visibilitat" id="privada" value="false">
        <label class="form-check-label" for="visibilitat">Privada</label>
      </div>
    </div>

    <div class="mb-3 form-check">
      <input class="form-check-input" type="checkbox" name="resolt" id="resolt" value="true">
      <label class="form-check-label" for="resolt">Resolt?</label>
    </div>

    <div class="d-flex justify-content-between">
      <a href="/actuaciones/list/incidencias/<%= id %>" class="btn btn-secondary">Tornar enrere</a>
      <button type="submit" class="btn btn-primary">Guardar actuació</button>
    </div>

    <input type="hidden" name="idt" value="<%= idt %>" />

  </form>
</div>

<%- include('../partials/footer') %>
